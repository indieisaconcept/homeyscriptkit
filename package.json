{
  "name": "homeyscriptkit",
  "version": "1.2.0",
  "description": "Extend your Homey's capabilities with custom HomeyScript automation scripts",
  "type": "module",
  "main": "index.js",
  "types": [
    "types/homey.d.ts",
    "src/hsk/types/homeyscript.d.ts"
  ],
  "bin": {
    "hsk": "./bin/cli.sh"
  },
  "scripts": {
    "lint": "eslint . --ext .ts",
    "watch": "rolldown -c rolldown.config.ts --watch",
    "build": "NODE_ENV=prod rolldown -c rolldown.config.ts",
    "build-debug": "rolldown -c rolldown.config.ts",
    "prebuild:common": "npm run lint && del-cli dist",
    "prebuild": "npm run prebuild:common",
    "prebuild-debug": "npm run prebuild:common",
    "help": "rolldown --help",
    "format": "prettier --write .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/indieisaconcept/homeyscriptkit.git"
  },
  "keywords": [
    "homey",
    "homeyscript"
  ],
  "author": "indieisaconcept <me@indieisaconcept.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/indieisaconcept/homeyscriptkit/issues"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint",
      "npm run format"
    ],
    "*.ts": "eslint --cache --fix"
  },
  "gitHooks": {
    "pre-commit": "npx lint-staged"
  },
  "homepage": "https://github.com/indieisaconcept/homeyscriptkit#readme",
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "@inquirer/prompts": "7.5.3",
    "cli-table3": "0.6.5",
    "homey": "3.8.1",
    "homey-api": "3.12.1",
    "ink": "6.0.0",
    "ink-table": "3.1.0",
    "lodash": "4.17.21",
    "meow": "13.2.0",
    "ora": "8.2.0",
    "pupa": "^3.1.0",
    "react": "19.1.0",
    "tsx": "4.20.3"
  },
  "devDependencies": {
    "@eslint/js": "9.29.0",
    "@eslint/json": "0.12.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@types/lodash": "4.17.17",
    "@types/node": "24.0.1",
    "@types/react": "19.1.8",
    "@typescript-eslint/eslint-plugin": "8.34.0",
    "@typescript-eslint/parser": "8.34.0",
    "@vitest/coverage-v8": "^3.2.3",
    "del-cli": "6.0.0",
    "eslint": "9.29.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-prettier": "5.4.1",
    "fast-glob": "3.3.3",
    "globals": "16.2.0",
    "husky": "^9.1.7",
    "lint-staged": "16.1.0",
    "prettier": "3.5.3",
    "rolldown": "1.0.0-beta.15",
    "rollup-plugin-swc3": "0.12.1",
    "tslib": "2.8.1",
    "typescript": "5.8.3",
    "typescript-eslint": "8.34.0",
    "vitest": "3.2.3"
  }
}
